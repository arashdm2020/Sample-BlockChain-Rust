# Database Configuration
DB_USERNAME=blockchain
DB_PASSWORD=your_password
DB_DATABASE=blockchain
DB_HOST=localhost
DB_PORT=3306

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WS_PORT=8081

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Network Configuration
NETWORK_PORT=8333
MAX_PEERS=100
BOOTSTRAP_NODES=node1.example.com:8333,node2.example.com:8333

# Market Configuration
INITIAL_TOKEN_PRICE=1.5
MIN_TRANSACTION_FEE=0.0001
MAX_TRANSACTION_FEE=0.01

# Governance Configuration
MIN_PROPOSAL_VOTES=1000
VOTING_PERIOD_DAYS=7
MAX_PROPOSAL_BUDGET=1000000

# System Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/path/to/backups

# Sharding Configuration
SHARD_COUNT=4
SHARD_SIZE_MB=1024

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
MAX_CONNECTIONS_PER_IP=10 